{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build-lib",
          "test",
          "lint",
          "depcheck",
          "build-app"
        ]
      }
    }
  },
  "namedInputs": {
    "sharedGlobals": ["{workspaceRoot}/vite.config.ts", "{workspaceRoot}/tsconfig.json"],
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/*.test.ts",
      "!{projectRoot}/**/*.md"
    ]
  },
  "targetDefaults": {
    "build-lib": {
      "inputs": [ "production", "^production" ],
      "dependsOn": [ "^build-lib" ],
      "outputs": [ "{projectRoot}/dist" ]
    },
    "test": {
      "inputs": [ "default", "^production" ],
      "dependsOn": [ "build-lib" ]
    },
    "depcheck": {
      "inputs": [ "production" ]
    },
    "lint": {
      "inputs": [ "production", "{workspaceRoot}/.eslintrc.js" ]
    }
  }
}
