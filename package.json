{
  "private": true,
  "name": "engraft",
  "description": "Engraft monorepo.",
  "scripts": {
    "root:test": "vitest",

    "all:test": "lerna run test",
    "all:tsc": "lerna run tsc",
    "all:depcheck": "lerna run depcheck",
    "all:lint": "lerna run lint",
    "all:checks": "lerna run test,tsc,depcheck,lint",
    "all:checks:watch": "npm run all:checks; lerna watch -- npm run all:checks",

    "testbed:dev": "lerna run dev --scope @engraft/testbed",
    "testbed:build": "lerna run build --scope @engraft/testbed",

    "graft-garden:dev": "lerna run dev --scope @engraft/graft-garden",
    "graft-garden:build": "lerna run build --scope @engraft/graft-garden"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/plugin-syntax-flow": "^7.18.6",
    "@babel/plugin-transform-react-jsx": "^7.21.0",
    "@engraft/test-shared": "^0.0.1",
    "@vitest/browser": "^0.29.1",
    "@vitest/coverage-c8": "^0.29.1",
    "@vitest/ui": "^0.29.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.12.0",
    "eslint-config-react-app": "^7.0.0",
    "happy-dom": "^8.9.0",
    "lerna": "^6.5.1",
    "typescript": "^4.9.4",
    "vite": "^4.1.4",
    "vite-plugin-checker": "^0.5.6",
    "vitest": "^0.29.1",
    "@engraft/eslint-plugin-incr-hooks": "^0.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "plugins": [
      "@engraft/incr-hooks"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "args": "none",
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@engraft/incr-hooks/exhaustive-deps": "warn"
    }
  }
}
