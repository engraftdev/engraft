{
  "name": "@engraft/cli",
  "version": "0.0.1",
  "description": "Command-line tool to run Engraft tools",
  "bin": "./src/index.ts",
  "type": "module",
  "scripts": {
    "test:watch": "vitest",
    "test": "vitest run",
    "build-lib": "tsc && cpy 'src/**/*.css' lib",
