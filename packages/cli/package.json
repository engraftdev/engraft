    "@engraft/original": "^0.0.1",
    "@happy-dom/global-registrator": "^8.9.0",
    "express": "^4.18.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-error-boundary": "^3.1.4",
    "react-router-dom": "^6.3.0",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/tmp": "^0.2.3",
    "@types/yargs": "^17.0.22",
